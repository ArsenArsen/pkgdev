[run]
source = pkgdev
branch = True
omit =
	tests/*
	*/_verinfo.py

[paths]
source =
	src/pkgdev
	build/lib/pkgdev
	.tox/*/lib/python*/site-packages/pkgdev
	.tox/pypy*/site-packages/pkgdev

[report]
show_missing = True
skip_covered = True
exclude_lines =
	# re-enable the standard pragma
	pragma: no cover

	# ignore defensive assertions
	raise AssertionError
	raise NotImplementedError

	# ignore unexecutable code
	if __name__ == .__main__.:
